---
const {href, text} = Astro.props
---

<a href={href} target="_blank" rel="noopener noreferrer">
    <button  class="shadow-[0_0_0_3px_#000000_inset] px-6 py-2 bg-transparent border-neutral-900 text-neutral-800 font-bold transform hover:-translate-y-1 transition duration-400 flex items-center gap-x-3">
        <slot name="svg" />
        <span class="text-sm">
            {text}
        </span>
    </button>

    
</a> 


